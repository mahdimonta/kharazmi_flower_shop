<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.ComposeApp"
        tools:targetApi="31">
        <activity
            android:name=".mainPage.MainScreen"
            android:exported="true"
            android:label="@string/title_activity_bottom_navigation"
            android:theme="@style/Theme.ComposeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".authentication.SendCode"
            android:exported="false"
            android:label="@string/title_activity_send_code"
            android:theme="@style/Theme.ComposeApp" />
        <activity
            android:name=".authentication.SingUp"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.ComposeApp" />
        <activity
            android:name=".authentication.Login"
            android:exported="false"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.ComposeApp" />

    </application>

</manifest>